<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/Back"
        android:layout_width="700dp"
        android:layout_height="350dp"
        android:background="@color/FrameBack"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/Manchester"
        android:layout_width="@dimen/TeamImg"
        android:layout_height="@dimen/TeamImg"
        android:layout_marginStart="30dp"
        android:layout_marginBottom="150dp"
        android:src="@drawable/manchester"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/Chelsi"
        android:layout_width="@dimen/TeamImg"
        android:layout_height="@dimen/TeamImg"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="150dp"
        android:src="@drawable/chelsea"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/manchester"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="@dimen/TTextSize_land"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/Manchester"
        app:layout_constraintStart_toStartOf="@+id/Manchester"
        app:layout_constraintTop_toBottomOf="@+id/Manchester" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/chelsea"
        android:textColor="@color/white"
        android:textSize="@dimen/TTextSize_land"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/Chelsi"
        app:layout_constraintStart_toStartOf="@+id/Chelsi"
        app:layout_constraintTop_toBottomOf="@+id/Chelsi" />

    <TextView
        android:id="@+id/scoret1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:layout_marginTop="105dp"
        android:text="3"
        android:textColor="@color/white"
        android:textSize="@dimen/scoreSize_land"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/Manchester"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="9dp"
        android:layout_height="43dp"
        android:layout_marginTop="105dp"
        android:text=":"
        android:textColor="@color/white"
        android:textSize="@dimen/scoreSize_land"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/scoret2"
        app:layout_constraintStart_toEndOf="@+id/scoret1"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/scoret2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="105dp"
        android:layout_marginEnd="80dp"
        android:text="0"
        android:textColor="@color/white"
        android:textSize="@dimen/scoreSize_land"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/Chelsi"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:background="@color/transparent"
        android:text="@string/reset"
        android:onClick="@+id/scoret2"
        android:textStyle="bold"
        android:textSize="@dimen/resetsize"
        app:layout_constraintBottom_toBottomOf="@+id/Back"
        app:layout_constraintEnd_toEndOf="@+id/Back"
        app:layout_constraintHorizontal_bias="0.499"
        app:layout_constraintStart_toStartOf="@+id/Back" />

</androidx.constraintlayout.widget.ConstraintLayout>